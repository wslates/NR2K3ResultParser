        xmlns:local="clr-namespace:NR2K3Results"
        mc:Ignorable="d"
        Title="NR2k3 Results" Height="317" Width="510" ResizeMode="NoResize">
    <Grid Margin="0,0,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
